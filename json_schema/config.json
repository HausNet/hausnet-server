{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://hausnet.io/root.json",
  "type": "object",
  "title": "The HausNet configuration schema",
  "required": [
    "command",
    "switches"
  ],
  "properties": {
    "command": {
      "$id": "#/properties/command",
      "type": "string",
      "title": "The Command Schema",
      "default": "",
      "examples": [
        "config"
      ],
      "pattern": "^(.*)$"
    },
    "switches": {
      "$id": "#/properties/switches",
      "type": "array",
      "title": "The Switches Schema",
      "items": {
        "$id": "#/properties/switches/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "name",
          "enable",
          "report_state",
          "report_state_period_ms"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/switches/items/properties/name",
            "type": "string",
            "title": "The Name Schema",
            "default": "",
            "examples": [
              "switch1"
            ],
            "pattern": "^(.*)$"
          },
          "enable": {
            "$id": "#/properties/switches/items/properties/enable",
            "type": "boolean",
            "title": "The Enable Schema",
            "default": false,
            "examples": [
              true
            ]
          },
          "report_state": {
            "$id": "#/properties/switches/items/properties/report_state",
            "type": "boolean",
            "title": "The Report_state Schema",
            "default": false,
            "examples": [
              true
            ]
          },
          "report_state_period_ms": {
            "$id": "#/properties/switches/items/properties/report_state_period_ms",
            "type": "integer",
            "title": "The Report_state_period_ms Schema",
            "default": 0,
            "examples": [
              1000
            ]
          }
        }
      }
    }
  }
}
