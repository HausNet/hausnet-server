{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://hausnet.io/root.json",
  "type": "object",
  "title": "The HausNet MQTT Protocol Schema",
  "required": [
    "device_id"
  ],
  "properties": {
    "device_id": {
      "$id": "#/properties/device_id",
      "type": "string",
      "title": "The device ID, with format [device type]/[firmware version]/[device MAC]",
      "default": "",
      "examples": [
        "sonoff_switch/1.23/ABC012DEF345"
      ],
      "pattern": "^[A-z0-9_]+/[0-9.]/[A-F0-9]+$"
    },
    "switches": {
      "$id": "#/properties/switches",
      "type": "array",
      "title": "Switches, identified by a name",
      "items": {
        "$id": "#/properties/switches/items",
        "type": "object",
        "title": "One switch in the array of available switches",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/switches/items/properties/name",
            "type": "string",
            "title": "The switch name",
            "default": "",
            "examples": [
              "power_switch"
            ],
            "pattern": "^[A-z0-9_]$"
          }
        }
      }
    }
  }
}
